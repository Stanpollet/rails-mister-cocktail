<p id="notice"><%= notice %></p>

<h1 class="text-center">Cocktails</h1>

<div class="container">
 <div class="row">
   <% @cocktails.each do |r| %>
   <div class="col-xs-12 col-sm-3">
     <%= render "card", cocktail: r %>
     <%= link_to 'show', cocktail_path(r), class: "btn btn-primary margin-top-5"%>
       <%= link_to "Delete", cocktail_path(r), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-primary margin-top-5"%>
   </div>
   <% end %>
 </div>

</div>

<%= link_to 'New cocktail', new_cocktail_path, class: "btn btn-primary", id: "new_cocktail_btn" %>

